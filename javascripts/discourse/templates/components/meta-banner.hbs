{{#unless hideStaff}}
  {{#unless (and (theme-setting 'hide_on_mobile') site.mobileView)}}
    {{#if (and showTrust showHere)}}
      <div class="custom-homepage-wrapper">
        <div class="wrap custom-homepage">
          <div class="welcome-wrapper">
            <div class="welcome-content">
               <h2>{{html-safe (theme-setting 'welcome')}}</h2>
               <p>{{html-safe (theme-setting 'subtitle')}}</p>
            </div>
            <div class="featured-banner-link">
              {{#each bannerLinks as |bl|}}
                <div>
                  <a href="{{bl.url}}">
                    <h3>
                      {{d-icon bl.icon}}
                      {{bl.text}}
                    </h3>
                  </a>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    {{/if}}
  {{/unless}}
{{/unless}}


